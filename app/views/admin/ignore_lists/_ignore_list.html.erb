<tr id="<%= dom_id(ignore_list) %>">
  <td class="px-6 py-4 whitespace-nowrap">
    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
      <%= case ignore_list.list_type
         when 'twitch_user'
           'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200'
         when 'discord_user'
           'bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-200'
         when 'url'
           'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200'
         when 'domain'
           'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200'
         end %>">
      <%= ignore_list.list_type.humanize %>
    </span>
  </td>
  
  <td class="px-6 py-4">
    <div class="text-sm font-medium text-gray-900 dark:text-white">
      <%= ignore_list.value %>
    </div>
  </td>
  
  <td class="px-6 py-4">
    <div class="text-sm text-gray-500 dark:text-gray-400 max-w-xs truncate">
      <%= ignore_list.notes || "-" %>
    </div>
  </td>
  
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
    <%= ignore_list.created_at.strftime("%b %d, %Y") %>
  </td>
  
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <div class="flex justify-end gap-2">
      <%= link_to "Edit", edit_admin_ignore_list_path(ignore_list), 
          class: "text-indigo-600 hover:text-indigo-900 dark:text-indigo-400",
          data: { turbo_frame: "modal" } %>
      <%= link_to "Delete", admin_ignore_list_path(ignore_list), 
          method: :delete,
          data: { 
            turbo_method: :delete, 
            turbo_confirm: "Are you sure you want to delete this entry?" 
          },
          class: "text-red-600 hover:text-red-900 dark:text-red-400" %>
    </div>
  </td>
</tr>