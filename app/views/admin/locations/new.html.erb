<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" data-turbo-temporary></div>
  
  <div class="fixed inset-0 z-10 overflow-y-auto" data-turbo-temporary>
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
        <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
          <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">New Location</h3>
          <%= render "form", location: @location %>
        </div>
      </div>
    </div>
  </div>
<% end %>