<div id="<%= dom_id(timestamp) %>_card" class="p-6">
  <div class="flex items-start justify-between">
    <div class="flex-1 min-w-0">
      <!-- Title and Description -->
      <h3 class="text-base font-medium text-gray-900">
        <%= link_to admin_timestamp_path(timestamp), class: "text-indigo-600 hover:text-indigo-900" do %>
          <%= timestamp.title %>
        <% end %>
      </h3>
      <% if timestamp.description.present? %>
        <p class="text-sm text-gray-500 mt-1 line-clamp-2"><%= timestamp.description %></p>
      <% end %>
      
      <!-- Event Details -->
      <div class="flex items-center mt-2 text-xs text-gray-500 space-x-4">
        <div>
          <span class="font-medium">Event Time:</span>
          <%= timestamp.event_timestamp.strftime("%m/%d/%Y at %I:%M %p") %>
        </div>
      </div>
      
      <!-- Stream Count -->
      <div class="mt-2">
        <% if timestamp.stream_count > 0 %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            <%= timestamp.stream_count %> <%= 'stream'.pluralize(timestamp.stream_count) %> linked
          </span>
        <% else %>
          <span class="text-xs text-gray-400">No streams linked</span>
        <% end %>
      </div>
    </div>
    
    <!-- Actions -->
    <div class="flex items-center space-x-2 ml-4 flex-shrink-0">
      
      <%= link_to admin_timestamp_path(timestamp), class: "text-gray-600 hover:text-gray-900", title: "View timestamp" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      <% end %>
      
      <%= link_to edit_admin_timestamp_path(timestamp), 
          class: "text-indigo-600 hover:text-indigo-900",
          data: { turbo_frame: "modal" },
          title: "Edit timestamp" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
      <% end %>
    </div>
  </div>
</div>