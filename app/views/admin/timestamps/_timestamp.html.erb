<tr id="<%= dom_id(timestamp) %>" class="hover:bg-gray-50">
  <td class="px-6 py-4 whitespace-nowrap">
    <div>
      <div class="text-sm font-medium text-gray-900">
        <%= link_to admin_timestamp_path(timestamp), class: "text-indigo-600 hover:text-indigo-900" do %>
          <%= timestamp.title %>
        <% end %>
      </div>
      <% if timestamp.description.present? %>
        <div class="text-xs text-gray-500"><%= truncate(timestamp.description, length: 60) %></div>
      <% end %>
    </div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <% if timestamp.stream_count > 0 %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
        <%= timestamp.stream_count %> <%= 'stream'.pluralize(timestamp.stream_count) %>
      </span>
    <% else %>
      <span class="text-gray-400">No streams</span>
    <% end %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <div class="flex flex-col">
      <span class="text-xs text-gray-900"><%= timestamp.event_timestamp.strftime("%m/%d/%Y") %></span>
      <span class="text-xs text-gray-500"><%= timestamp.event_timestamp.strftime("%I:%M %p") %></span>
    </div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <div class="flex items-center justify-end space-x-2">
      
      <%= link_to edit_admin_timestamp_path(timestamp), 
          class: "text-indigo-600 hover:text-indigo-900",
          data: { turbo_frame: "modal" },
          title: "Edit timestamp" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
      <% end %>
      
      <%= button_to admin_timestamp_path(timestamp), 
          method: :delete,
          class: "text-red-600 hover:text-red-900",
          data: { turbo_confirm: "Are you sure you want to delete this timestamp?" },
          title: "Delete timestamp" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
      <% end %>
    </div>
  </td>
</tr>