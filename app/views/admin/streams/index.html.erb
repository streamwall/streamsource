<% content_for :page_title, "Streams" %>
<% content_for :page_actions do %>
  <%= link_to admin_new_stream_path, 
      class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700",
      data: { turbo_frame: "modal" } do %>
    <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
    </svg>
    New Stream
  <% end %>
<% end %>

<!-- Filters -->
<div class="bg-white rounded-lg shadow mb-6 p-4">
  <%= form_with url: admin_streams_path, method: :get, data: { controller: "search", search_target: "form", turbo_frame: "streams_list", turbo_action: "advance" }, class: "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4" do |form| %>
    <div class="col-span-full xl:col-span-1">
      <%= form.text_field :search, 
          placeholder: "Search streams...",
          value: params[:search],
          data: { action: "input->search#submit" },
          class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    
    <div>
      <%= form.select :status, 
          options_for_select([["All Status", ""], ["Live", "Live"], ["Offline", "Offline"], ["Unknown", "Unknown"]], params[:status]),
          {},
          class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    
    <div>
      <%= form.select :platform, 
          options_for_select([["All Platforms", ""], ["TikTok", "TikTok"], ["Facebook", "Facebook"], ["Twitch", "Twitch"], ["YouTube", "YouTube"], ["Instagram", "Instagram"], ["Other", "Other"]], params[:platform]),
          {},
          class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    
    <div>
      <%= form.select :kind, 
          options_for_select([["All Kinds", ""], ["Video", "video"], ["Web", "web"], ["Overlay", "overlay"], ["Background", "background"]], params[:kind]),
          {},
          class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    
    <div>
      <%= form.select :orientation, 
          options_for_select([["All Orientations", ""], ["Vertical", "vertical"], ["Horizontal", "horizontal"]], params[:orientation]),
          {},
          class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    
    <div>
      <%= form.select :is_pinned, 
          options_for_select([["All Streams", ""], ["Pinned Only", "true"], ["Unpinned Only", "false"]], params[:is_pinned]),
          {},
          class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    
    <div class="flex gap-2">
      <%= form.submit "Filter", class: "px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700" %>
      <%= link_to "Clear", admin_streams_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300" %>
    </div>
  <% end %>
</div>

<!-- Streams list -->
<turbo-frame id="streams_list">
  <div class="bg-white shadow overflow-hidden rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Source</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Platform</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Location</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Posted By</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Live</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kind</th>
          <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200" id="streams">
        <% @streams.each do |stream| %>
          <%= render 'stream', stream: stream %>
        <% end %>
      </tbody>
    </table>
    
    <% if @streams.empty? %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No streams found</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new stream.</p>
      </div>
    <% end %>
  </div>
  
  <!-- Pagination -->
  <% if @pagy.pages > 1 %>
    <div class="mt-4">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  <% end %>
</turbo-frame>

<!-- Modal container -->
<turbo-frame id="modal" data-controller="modal"></turbo-frame>