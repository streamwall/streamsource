<div id="<%= dom_id(annotation_stream) %>" class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50">
  <div class="flex items-start justify-between">
    <div class="flex-1 min-w-0">
      <!-- Stream Info -->
      <div class="flex items-center space-x-2 mb-2">
        <h4 class="text-sm font-medium text-gray-900">
          <%= link_to admin_stream_path(annotation_stream.stream), class: "text-indigo-600 hover:text-indigo-900" do %>
            <%= annotation_stream.stream.source %>
          <% end %>
        </h4>
        <% if annotation_stream.stream.streamer.present? %>
          <span class="text-xs text-gray-500">
            by <%= link_to annotation_stream.stream.streamer.name, admin_streamer_path(annotation_stream.stream.streamer), class: "text-indigo-600 hover:text-indigo-900" %>
          </span>
        <% end %>
      </div>
      
      <!-- Platform and Status -->
      <div class="flex items-center space-x-2 mb-2">
        <% if annotation_stream.stream.platform.present? %>
          <span class="text-xs text-gray-600"><%= annotation_stream.stream.platform %></span>
          <span class="text-gray-300">•</span>
        <% end %>
        
        <% badge_color = case annotation_stream.stream.status
           when 'Live' then 'bg-green-100 text-green-800'
           when 'Offline' then 'bg-gray-100 text-gray-800'
           else 'bg-yellow-100 text-yellow-800'
           end %>
        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= badge_color %>">
          <%= annotation_stream.stream.status %>
        </span>
      </div>
      
      <!-- Relevance Score -->
      <div class="flex items-center space-x-2 mb-2">
        <span class="text-xs font-medium text-gray-500">Relevance:</span>
        <div class="flex items-center">
          <% (1..5).each do |i| %>
            <% if i <= annotation_stream.relevance_score %>
              <svg class="h-3 w-3 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            <% else %>
              <svg class="h-3 w-3 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            <% end %>
          <% end %>
          <span class="ml-1 text-xs text-gray-500">(<%= annotation_stream.relevance_score %>/5)</span>
        </div>
      </div>
      
      <!-- Timestamp -->
      <% if annotation_stream.stream_timestamp_seconds.present? %>
        <div class="text-xs text-gray-500 mb-2">
          <span class="font-medium">Timestamp:</span>
          <%= Time.at(annotation_stream.stream_timestamp_seconds).utc.strftime("%H:%M:%S") %>
        </div>
      <% end %>
      
      <!-- Notes -->
      <% if annotation_stream.stream_notes.present? %>
        <div class="text-xs text-gray-600 mb-2">
          <span class="font-medium">Notes:</span>
          <%= annotation_stream.stream_notes %>
        </div>
      <% end %>
      
      <!-- Added by -->
      <div class="text-xs text-gray-500">
        Added by <%= annotation_stream.added_by_user.email %> 
        <span class="text-gray-400">•</span>
        <%= time_ago_in_words(annotation_stream.created_at) %> ago
      </div>
    </div>
    
    <!-- Actions -->
    <div class="flex items-center space-x-2 ml-4 flex-shrink-0">
      <a href="<%= annotation_stream.stream.link %>" target="_blank" class="text-blue-600 hover:text-blue-900" title="View stream">
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
      
      <%= link_to admin_stream_path(annotation_stream.stream), class: "text-gray-600 hover:text-gray-900", title: "View stream details" do %>
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      <% end %>
    </div>
  </div>
</div>