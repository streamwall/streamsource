<div id="<%= dom_id(annotation) %>_card" class="p-6">
  <div class="flex items-start justify-between">
    <div class="flex-1 min-w-0">
      <!-- Title and Description -->
      <h3 class="text-base font-medium text-gray-900">
        <%= link_to admin_annotation_path(annotation), class: "text-indigo-600 hover:text-indigo-900" do %>
          <%= annotation.title %>
        <% end %>
      </h3>
      <% if annotation.description.present? %>
        <p class="text-sm text-gray-500 mt-1 line-clamp-2"><%= annotation.description %></p>
      <% end %>
      
      <!-- Event Type and Priority -->
      <div class="flex items-center mt-2 space-x-2">
        <span class="text-sm text-gray-600"><%= annotation.event_type.humanize %></span>
        <span class="text-gray-300">â€¢</span>
        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= annotation.priority_color %>">
          <%= annotation.priority_level.capitalize %>
        </span>
      </div>
      
      <!-- Status and Requirements -->
      <div class="flex items-center mt-2 space-x-2">
        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= annotation.status_color %>">
          <%= annotation.review_status.humanize %>
        </span>
        <% if annotation.requires_review? %>
          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
            Review Required
          </span>
        <% end %>
      </div>
      
      <!-- Event Details -->
      <div class="flex items-center mt-2 text-xs text-gray-500 space-x-4">
        <div>
          <span class="font-medium">Event Time:</span>
          <%= annotation.event_timestamp.strftime("%m/%d/%Y at %I:%M %p") %>
        </div>
        <% if annotation.location.present? %>
          <div>
            <span class="font-medium">Location:</span>
            <%= annotation.location_display %>
          </div>
        <% end %>
      </div>
      
      <!-- Stream Count -->
      <div class="mt-2">
        <% if annotation.stream_count > 0 %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            <%= annotation.stream_count %> <%= 'stream'.pluralize(annotation.stream_count) %> linked
          </span>
        <% else %>
          <span class="text-xs text-gray-400">No streams linked</span>
        <% end %>
      </div>
    </div>
    
    <!-- Actions -->
    <div class="flex items-center space-x-2 ml-4 flex-shrink-0">
      <% if annotation.external_url.present? %>
        <a href="<%= annotation.external_url %>" target="_blank" class="text-blue-600 hover:text-blue-900" title="View external link">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      <% end %>
      
      <% unless annotation.resolved? %>
        <% if annotation.review_status_pending? || annotation.review_status_in_review? %>
          <%= button_to resolve_admin_annotation_path(annotation), 
              method: :patch,
              class: "text-green-600 hover:text-green-900",
              title: "Mark as resolved" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          <% end %>
        <% end %>
      <% end %>
      
      <%= link_to admin_annotation_path(annotation), class: "text-gray-600 hover:text-gray-900", title: "View annotation" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      <% end %>
      
      <%= link_to edit_admin_annotation_path(annotation), 
          class: "text-indigo-600 hover:text-indigo-900",
          data: { turbo_frame: "modal" },
          title: "Edit annotation" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
      <% end %>
    </div>
  </div>
</div>