<%= form_with model: [:admin, annotation], id: "annotation_form", class: "space-y-6" do |form| %>
  <% if annotation.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
      <h4 class="font-medium">Please fix the following errors:</h4>
      <ul class="mt-2 list-disc list-inside text-sm">
        <% annotation.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <!-- Basic Event Information -->
    <div class="col-span-full">
      <%= form.label :title, "Event Title", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, 
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
          placeholder: "Brief description of the event",
          required: true,
          maxlength: 200 %>
      <p class="mt-1 text-xs text-gray-500">Brief title describing the event (max 200 characters)</p>
    </div>
    
    <!-- Event Type and Priority -->
    <div>
      <%= form.label :event_type, "Event Type", class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :event_type, 
          options_for_select(Annotation.event_types.map {|k,v| [k.humanize, v]}, annotation.event_type),
          { prompt: "Select event type..." },
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
          required: true %>
      <p class="mt-1 text-xs text-gray-500">What type of event is this?</p>
    </div>

    <div>
      <%= form.label :priority_level, "Priority Level", class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :priority_level, 
          options_for_select(Annotation.priority_levels.map {|k,v| [k.humanize, v]}, annotation.priority_level),
          {},
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      <p class="mt-1 text-xs text-gray-500">How urgent is this event?</p>
    </div>

    <!-- Event Timing -->
    <div class="col-span-full">
      <%= form.label :event_timestamp, "Event Date & Time", class: "block text-sm font-medium text-gray-700" %>
      <%= form.datetime_local_field :event_timestamp, 
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
          required: true %>
      <p class="mt-1 text-xs text-gray-500">When did this event occur? (in your local time)</p>
    </div>

    <!-- Location Information -->
    <div>
      <%= form.label :location, "Location Description", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :location, 
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
          placeholder: "New York City, NY",
          maxlength: 100 %>
      <p class="mt-1 text-xs text-gray-500">Human-readable location description</p>
    </div>

    <div>
      <%= form.label :external_url, "External URL", class: "block text-sm font-medium text-gray-700" %>
      <%= form.url_field :external_url, 
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
          placeholder: "https://example.com/news-article" %>
      <p class="mt-1 text-xs text-gray-500">Link to news article, social media post, etc.</p>
    </div>

    <!-- Coordinates (optional advanced section) -->
    <div>
      <%= form.label :latitude, "Latitude", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :latitude, 
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
          placeholder: "40.7128",
          step: :any,
          min: -90,
          max: 90 %>
      <p class="mt-1 text-xs text-gray-500">GPS latitude (-90 to 90)</p>
    </div>

    <div>
      <%= form.label :longitude, "Longitude", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :longitude, 
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
          placeholder: "-74.0060",
          step: :any,
          min: -180,
          max: 180 %>
      <p class="mt-1 text-xs text-gray-500">GPS longitude (-180 to 180)</p>
    </div>

    <!-- Tags -->
    <div class="col-span-full">
      <%= form.label :tag_list, "Tags", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :tag_list, 
          value: annotation.tag_list.is_a?(Array) ? annotation.tag_list.join(', ') : annotation.tag_list,
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
          placeholder: "breaking news, protest, emergency" %>
      <p class="mt-1 text-xs text-gray-500">Comma-separated tags for categorizing this event</p>
    </div>

    <!-- Review Settings -->
    <div class="flex items-center">
      <%= form.check_box :requires_review, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
      <%= form.label :requires_review, "Requires Review", class: "ml-2 block text-sm text-gray-900" %>
      <p class="ml-6 text-xs text-gray-500">Flag this annotation for manual review</p>
    </div>
  </div>

  <!-- Description field spans full width -->
  <div>
    <%= form.label :description, "Detailed Description", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, 
        rows: 4,
        maxlength: 2000,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
        placeholder: "Detailed description of what happened during this event..." %>
    <p class="mt-1 text-xs text-gray-500">Provide detailed context about this event (max 2000 characters)</p>
  </div>

  <div class="flex justify-end space-x-3 pt-4 border-t">
    <%= link_to "Cancel", admin_annotations_path, 
        class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50",
        data: { turbo_frame: "_top" } %>
    <%= form.submit class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 disabled:opacity-50 disabled:cursor-not-allowed", 
        data: { "turbo-submits-with": "Saving..." } %>
  </div>
<% end %>