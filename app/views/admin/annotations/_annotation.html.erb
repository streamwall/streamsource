<tr id="<%= dom_id(annotation) %>" class="hover:bg-gray-50">
  <td class="px-6 py-4 whitespace-nowrap">
    <div>
      <div class="text-sm font-medium text-gray-900">
        <%= link_to admin_annotation_path(annotation), class: "text-indigo-600 hover:text-indigo-900" do %>
          <%= annotation.title %>
        <% end %>
      </div>
      <% if annotation.description.present? %>
        <div class="text-xs text-gray-500"><%= truncate(annotation.description, length: 60) %></div>
      <% end %>
    </div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <span class="text-sm text-gray-900"><%= annotation.event_type.humanize %></span>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= annotation.priority_color %>">
      <%= annotation.priority_level.capitalize %>
    </span>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= annotation.status_color %>">
      <%= annotation.review_status.humanize %>
    </span>
    <% if annotation.requires_review? %>
      <span class="ml-1 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
        Review Required
      </span>
    <% end %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= annotation.location_display %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <% if annotation.stream_count > 0 %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
        <%= annotation.stream_count %> <%= 'stream'.pluralize(annotation.stream_count) %>
      </span>
    <% else %>
      <span class="text-gray-400">No streams</span>
    <% end %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <div class="flex flex-col">
      <span class="text-xs text-gray-900"><%= annotation.event_timestamp.strftime("%m/%d/%Y") %></span>
      <span class="text-xs text-gray-500"><%= annotation.event_timestamp.strftime("%I:%M %p") %></span>
    </div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <div class="flex items-center justify-end space-x-2">
      <% if annotation.external_url.present? %>
        <a href="<%= annotation.external_url %>" target="_blank" class="text-blue-600 hover:text-blue-900" title="View external link">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      <% end %>
      
      <% unless annotation.resolved? %>
        <% if annotation.review_status_pending? || annotation.review_status_in_review? %>
          <%= button_to resolve_admin_annotation_path(annotation), 
              method: :patch,
              class: "text-green-600 hover:text-green-900",
              title: "Mark as resolved" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          <% end %>
          
          <%= button_to dismiss_admin_annotation_path(annotation), 
              method: :patch,
              class: "text-gray-600 hover:text-gray-900",
              title: "Dismiss annotation" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          <% end %>
        <% end %>
      <% end %>
      
      <%= link_to edit_admin_annotation_path(annotation), 
          class: "text-indigo-600 hover:text-indigo-900",
          data: { turbo_frame: "modal" },
          title: "Edit annotation" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
      <% end %>
      
      <%= button_to admin_annotation_path(annotation), 
          method: :delete,
          class: "text-red-600 hover:text-red-900",
          data: { turbo_confirm: "Are you sure you want to delete this annotation?" },
          title: "Delete annotation" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
      <% end %>
    </div>
  </td>
</tr>