<% form_url = case notable
     when Stream
       note.persisted? ? admin_stream_note_path(notable, note) : admin_stream_notes_path(notable)
     when Streamer  
       note.persisted? ? admin_streamer_note_path(notable, note) : admin_streamer_notes_path(notable)
     end %>
<%= form_with model: note, url: form_url, id: "note_form", class: "space-y-4" do |form| %>
  
  <% if note.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
      <h4 class="font-medium">Please fix the following errors:</h4>
      <ul class="mt-2 list-disc list-inside text-sm">
        <% note.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :content, "Note", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :content, 
        rows: 4,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
        placeholder: "Add your note about this #{notable.class.name.downcase}...",
        required: true,
        maxlength: 2000,
        data: { action: "input->character-counter#update" },
        "data-character-counter-target": "textarea" %>
    <div class="mt-1 flex items-center justify-between">
      <p class="text-xs text-gray-500">Share context, observations, or important information about this <%= notable.class.name.downcase %>.</p>
      <span class="text-xs text-gray-400" data-character-counter-target="counter" data-controller="character-counter">0/2000</span>
    </div>
  </div>

  <div class="flex justify-end space-x-3 pt-4 border-t">
    <%= link_to "Cancel", "#", 
        class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50",
        data: { turbo_frame: "_top" } %>
    <%= form.submit "Save Note", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 disabled:opacity-50 disabled:cursor-not-allowed", 
        data: { "turbo-submits-with": "Saving..." } %>
  </div>
<% end %>