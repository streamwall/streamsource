<!DOCTYPE html>
<html>
  <head>
    <title>StreamSource Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "/assets/application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "/assets/application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body class="bg-gray-50">
    <div class="flex h-screen overflow-hidden">
      <!-- Sidebar -->
      <nav class="bg-gray-900 text-white w-64 px-4 py-6">
        <div class="mb-8">
          <h1 class="text-2xl font-bold">StreamSource</h1>
          <p class="text-gray-400 text-sm">Admin Panel</p>
        </div>
        
        <ul class="space-y-2">
          <li>
            <%= link_to admin_streams_path, class: "flex items-center px-3 py-2 rounded hover:bg-gray-800 transition #{controller_name == 'streams' ? 'bg-gray-800' : ''}" do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
              Streams
            <% end %>
          </li>
          <li>
            <%= link_to admin_users_path, class: "flex items-center px-3 py-2 rounded hover:bg-gray-800 transition #{controller_name == 'users' ? 'bg-gray-800' : ''}" do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
              Users
            <% end %>
          </li>
          <li>
            <%= link_to admin_feature_flags_path, class: "flex items-center px-3 py-2 rounded hover:bg-gray-800 transition #{controller_name == 'feature_flags' ? 'bg-gray-800' : ''}" do %>
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9"></path>
              </svg>
              Feature Flags
            <% end %>
          </li>
        </ul>
        
        <div class="mt-auto pt-8">
          <%= button_to "Logout", admin_logout_path, method: :delete, class: "flex items-center px-3 py-2 rounded hover:bg-gray-800 transition w-full" %>
        </div>
      </nav>
      
      <!-- Main content -->
      <main class="flex-1 overflow-y-auto">
        <div class="p-8">
          <!-- Flash messages -->
          <div id="flash">
            <% if flash[:notice].present? %>
              <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-4" data-turbo-temporary>
                <p class="text-sm"><%= flash[:notice] %></p>
              </div>
            <% end %>
            
            <% if flash[:alert].present? %>
              <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-4" data-turbo-temporary>
                <p class="text-sm"><%= flash[:alert] %></p>
              </div>
            <% end %>
          </div>
          
          <%= yield %>
        </div>
      </main>
    </div>
  </body>
</html>