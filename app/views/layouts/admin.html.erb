<!DOCTYPE html>
<html>
  <head>
    <title>StreamSource Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "/assets/application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "/assets/application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body class="bg-gray-50" data-controller="mobile-menu">
    <!-- Mobile menu overlay -->
    <div id="mobile-menu-overlay" class="fixed inset-0 z-40 lg:hidden hidden">
      <div class="fixed inset-0 bg-black bg-opacity-50" data-action="click->mobile-menu#close"></div>
    </div>

    <div class="flex h-screen overflow-hidden">
      <!-- Desktop Sidebar -->
      <nav class="bg-gray-900 text-white w-64 flex-shrink-0 hidden lg:block" id="desktop-sidebar">
        <div class="h-full overflow-y-auto px-4 py-6 flex flex-col">
          <div class="mb-8 flex-shrink-0">
            <h1 class="text-2xl font-bold">StreamSource</h1>
            <p class="text-gray-400 text-sm">Admin Panel</p>
          </div>

          <ul class="space-y-2 flex-1 overflow-y-auto">
            <li>
              <%= link_to admin_streams_path, class: "flex items-center px-3 py-2 rounded hover:bg-gray-800 transition #{'bg-gray-800' if controller_name == 'streams'}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
                Streams
              <% end %>
            </li>
            <li>
              <%= link_to admin_streamers_path, class: "flex items-center px-3 py-2 rounded hover:bg-gray-800 transition #{'bg-gray-800' if controller_name == 'streamers'}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                Streamers
              <% end %>
            </li>
            <li>
              <%= link_to admin_annotations_path, class: "flex items-center px-3 py-2 rounded hover:bg-gray-800 transition #{'bg-gray-800' if controller_name == 'annotations'}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                </svg>
                Annotations
              <% end %>
            </li>
            <li>
              <%= link_to admin_users_path, class: "flex items-center px-3 py-2 rounded hover:bg-gray-800 transition #{'bg-gray-800' if controller_name == 'users'}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.3.3.6 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
                Users
              <% end %>
            </li>
            <li>
              <%= link_to admin_feature_flags_path, class: "flex items-center px-3 py-2 rounded hover:bg-gray-800 transition #{'bg-gray-800' if controller_name == 'feature_flags'}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9"></path>
                </svg>
                Feature Flags
              <% end %>
            </li>
          </ul>

          <div class="border-t border-gray-700 pt-4 mt-4">
            <div class="flex items-center mb-3">
              <div class="w-8 h-8 bg-indigo-600 rounded-full flex items-center justify-center text-sm font-medium">
                <%= current_admin_user&.email&.first&.upcase %>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium"><%= current_admin_user&.email %></p>
                <p class="text-xs text-gray-400">Admin</p>
              </div>
            </div>
            <%= button_to admin_logout_path, method: :delete, class: "flex items-center px-3 py-2 rounded hover:bg-gray-800 transition w-full text-sm" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
              Logout
            <% end %>
          </div>
        </div>
      </nav>

      <!-- Mobile sidebar -->
      <nav class="bg-gray-900 text-white w-64 flex-shrink-0 fixed inset-y-0 left-0 z-50 transform transition-transform duration-200 ease-in-out lg:hidden -translate-x-full" id="mobile-menu">
        <div class="h-full overflow-y-auto px-4 py-6 flex flex-col">
          <div class="mb-8 flex-shrink-0">
            <h1 class="text-2xl font-bold">StreamSource</h1>
            <p class="text-gray-400 text-sm">Admin Panel</p>
          </div>

          <ul class="space-y-2 flex-1 overflow-y-auto">
            <li>
              <%= link_to admin_streams_path, class: "flex items-center px-3 py-2 rounded hover:bg-gray-800 transition #{'bg-gray-800' if controller_name == 'streams'}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
                Streams
              <% end %>
            </li>
            <li>
              <%= link_to admin_streamers_path, class: "flex items-center px-3 py-2 rounded hover:bg-gray-800 transition #{'bg-gray-800' if controller_name == 'streamers'}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                Streamers
              <% end %>
            </li>
            <li>
              <%= link_to admin_annotations_path, class: "flex items-center px-3 py-2 rounded hover:bg-gray-800 transition #{'bg-gray-800' if controller_name == 'annotations'}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                </svg>
                Annotations
              <% end %>
            </li>
            <li>
              <%= link_to admin_users_path, class: "flex items-center px-3 py-2 rounded hover:bg-gray-800 transition #{'bg-gray-800' if controller_name == 'users'}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.3.3.6 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
                Users
              <% end %>
            </li>
            <li>
              <%= link_to admin_feature_flags_path, class: "flex items-center px-3 py-2 rounded hover:bg-gray-800 transition #{'bg-gray-800' if controller_name == 'feature_flags'}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9"></path>
                </svg>
                Feature Flags
              <% end %>
            </li>
          </ul>

          <div class="border-t border-gray-700 pt-4 mt-4">
            <div class="flex items-center mb-3">
              <div class="w-8 h-8 bg-indigo-600 rounded-full flex items-center justify-center text-sm font-medium">
                <%= current_admin_user&.email&.first&.upcase %>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium"><%= current_admin_user&.email %></p>
                <p class="text-xs text-gray-400">Admin</p>
              </div>
            </div>
            <%= button_to admin_logout_path, method: :delete, class: "flex items-center px-3 py-2 rounded hover:bg-gray-800 transition w-full text-sm" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
              Logout
            <% end %>
          </div>
        </div>
      </nav>


      <!-- Main content -->
      <main class="flex-1 flex flex-col overflow-hidden">
        <!-- Page header -->
        <header class="bg-white shadow-sm border-b border-gray-200">
          <div class="px-3 sm:px-6 lg:px-8 py-3 md:py-4">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <!-- Mobile menu button -->
                <button type="button" class="lg:hidden inline-flex items-center justify-center p-1.5 md:p-2 rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500 mr-2 md:mr-4" data-action="click->mobile-menu#toggle">
                  <svg class="h-5 w-5 md:h-6 md:w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                  </svg>
                </button>
                <div>
                  <% if content_for?(:page_title) %>
                    <h1 class="text-lg md:text-2xl font-bold text-gray-900"><%= yield(:page_title) %></h1>
                  <% end %>
                  <% if content_for?(:page_subtitle) %>
                    <p class="text-xs md:text-sm text-gray-600 mt-0.5 md:mt-1 hidden sm:block"><%= yield(:page_subtitle) %></p>
                  <% end %>
                </div>
              </div>
              <% if content_for?(:page_actions) %>
                <div class="flex items-center space-x-2 md:space-x-3">
                  <%= yield(:page_actions) %>
                </div>
              <% end %>
            </div>
          </div>
        </header>

        <div class="flex-1 overflow-y-auto">
          <div class="px-3 sm:px-6 lg:px-8 py-4 md:py-6">
          <!-- Flash messages -->
          <div id="flash">
            <% if flash[:notice].present? %>
              <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-6 flex items-center" data-turbo-temporary>
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <p class="text-sm"><%= flash[:notice] %></p>
              </div>
            <% end %>

            <% if flash[:alert].present? %>
              <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-6 flex items-center" data-turbo-temporary>
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                </svg>
                <p class="text-sm"><%= flash[:alert] %></p>
              </div>
            <% end %>
          </div>

            <%= yield %>
          </div>
        </div>
      </main>
    </div>

    <!-- Modal container -->
    <turbo-frame id="modal" data-controller="modal"></turbo-frame>
  </body>
</html>