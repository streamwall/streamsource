# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{rb,rake,ru}]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{json}]
indent_size = 2

[*.{html,erb}]
indent_size = 2

[*.{css,scss}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4

[*.{bat,cmd}]
end_of_line = crlf