[Unit]
Description=Puma HTTP Server for StreamSource
After=network.target

[Service]
Type=simple
User={{ app_user }}
Group={{ app_user }}
WorkingDirectory={{ app_path }}

# Environment
Environment="RAILS_ENV=production"
Environment="HOME=/home/{{ app_user }}"
Environment="PATH=/home/{{ app_user }}/.rbenv/bin:/home/{{ app_user }}/.rbenv/shims:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

# Load environment from .env file
EnvironmentFile={{ app_path }}/.env

# Start command
ExecStart=/home/{{ app_user }}/.rbenv/shims/bundle exec puma -C config/puma.rb

# Restart policy
Restart=always
RestartSec=10

# Output to journal
StandardOutput=journal
StandardError=journal
SyslogIdentifier=puma

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths={{ app_path }}

[Install]
WantedBy=multi-user.target